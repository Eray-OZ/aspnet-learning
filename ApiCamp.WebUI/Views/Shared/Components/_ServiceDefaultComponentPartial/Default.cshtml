<!-- Why Us Section -->
@model List<ApiCamp.WebUI.Dtos.ServiceDtos.ResultServiceDto>





<section id="why-us" class="why-us section light-background">

    <div class="container">

        <div class="row gy-4">

            <div class="col-lg-4" data-aos="fade-up" data-aos-delay="100">
                <div class="why-box">
                    <h3>Why Choose Yummy</h3>
                    <p>
                        At Yummy, we don’t just serve food — we serve experiences. Here's why our guests keep coming back:
                        <br />
                        🍽 Fresh Ingredients, Every Day
                        We believe great taste starts with great ingredients. That’s why we handpick fresh, locally-sourced produce and high-quality meats daily.
                        <br />
                        👨‍🍳 Passionate Chefs, Authentic Recipes
                        Our skilled chefs blend tradition with creativity to bring you delicious meals inspired by global flavors — all made from scratch.
                        <br />
                        ⏱ Fast & Friendly Service
                        Your time matters. Whether you dine in or take out, we promise quick service with a warm smile.
                        <br />
                        🌿 Cozy Atmosphere
                        From our welcoming decor to the relaxing ambiance, Yummy is the perfect spot for a casual lunch, family dinner, or a night out with friends.
                        <br />
                        ⭐ Customer Satisfaction is Our Priority
                        We value every guest and strive to exceed expectations with every plate we serve.
                        <br />
                        Come taste the difference — only at Yummy.
                    </p>
                    <div class="text-center">
                        <a href="#" class="more-btn"><span>Learn More</span> <i class="bi bi-chevron-right"></i></a>
                    </div>
                </div>
            </div><!-- End Why Box -->




            <div class="col-lg-8 d-flex align-items-stretch">
                <div class="row gy-4" data-aos="fade-up" data-aos-delay="200">

                    @foreach (var item in Model)
                    {

                        <div class="col-xl-4">
                            <div class="icon-box d-flex flex-column justify-content-center align-items-center">
                                <i class="@item.IconUrl"></i>
                                <h4>@item.Title</h4>
                                <p>@item.Description</p>
                            </div>
                        </div>

                        <!-- End Icon Box -->
                    }

                </div>
            </div>

        </div>

    </div>

</section><!-- /Why Us Section -->